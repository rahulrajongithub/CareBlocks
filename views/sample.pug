extends layout

mixin message(opp, name)
    if(opp)
        h1.greeting Test in as 
            span=name 
    else 
        h1.greeting Test 
            span=name 
            |  to our website


append links 
    li(style="float: right;")
        a(href="/logout") Logout 

block content
    .dashboard 
        .user 
            +message(opp, name)